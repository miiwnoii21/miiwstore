@model MiiwStore.Models.ViewModels.SubCategoryModel

<tr>
  

    <td>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </td>
    <td>
        @MvcHtmlString.Create(Model.IsInUse ? "unavailable" : "available")
    </td>
    <td>
        @if (Model.IsInUse)
        {
            @Html.CheckBoxFor(model => model.IsDelete, htmlAttributes: new { disabled = "disabled" })
        }
        else
        {
            @Html.CheckBoxFor(model => model.IsDelete)
        }
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.CategoryID)
    </td>



</tr>
