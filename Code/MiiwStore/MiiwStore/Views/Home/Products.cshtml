@model IEnumerable<MiiwStore.Models.ViewModels.ProductModel>

@{
    ViewBag.Title = "Product Catalog";
}

<h2>Product Catalog</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProdName)
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdName)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ProductDetails.First().PicURL)" width="105px"/>
            </td>
        </tr>
    }

</table>
